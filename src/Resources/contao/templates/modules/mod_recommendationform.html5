<!-- indexer::stop -->
<div class="form">
  <?php if ($this->confirm): ?>
    <p class="tl_confirm"><?= $this->confirm ?></p>
  <?php else: ?>
    <form id="<?= $this->formId ?>" method="post"<?=$this->styleManager->prepare('gridForm', ['recommendationFormGrid'])->format(' class="%s"')?>>
      <div class="formbody inside">
        <input type="hidden" name="FORM_SUBMIT" value="<?= $this->formId ?>">
        <input type="hidden" name="REQUEST_TOKEN" value="{{request_token}}">
        <?php foreach ($this->fields as $field): ?>
          <?= $field->parse() ?>
        <?php endforeach; ?>

        <div class="widget widget-submit">
          <button type="submit" class="submit"><?= $this->submit ?></button>
        </div>
      </div>
    </form>
  <?php endif; ?>
</div>
